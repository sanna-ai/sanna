{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sanna.dev/schemas/receipt/v0.1.json",
  "title": "Sanna Reasoning Receipt",
  "description": "Schema for Sanna reasoning receipts - artifacts that capture AI reasoning provenance and consistency check results",
  "type": "object",
  "required": [
    "schema_version",
    "tool_version",
    "checks_version",
    "receipt_id",
    "receipt_fingerprint",
    "trace_id",
    "timestamp",
    "inputs",
    "outputs",
    "context_hash",
    "output_hash",
    "final_answer_provenance",
    "checks",
    "checks_passed",
    "checks_failed",
    "coherence_status"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Schema version (breaking changes only)",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "examples": ["0.1"]
    },
    "tool_version": {
      "type": "string",
      "description": "Tool version that generated this receipt",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "examples": ["0.6.1"]
    },
    "checks_version": {
      "type": "string",
      "description": "Version of check logic (increment when check behavior changes)",
      "pattern": "^[0-9]+$",
      "examples": ["3"]
    },
    "receipt_id": {
      "type": "string",
      "description": "Unique identifier for this receipt instance (changes per run)",
      "pattern": "^[a-f0-9]{16}$"
    },
    "receipt_fingerprint": {
      "type": "string",
      "description": "Stable identifier for this trace content (same across runs of same trace)",
      "pattern": "^[a-f0-9]{16}$"
    },
    "trace_id": {
      "type": "string",
      "description": "Source trace identifier from observability platform",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when receipt was generated",
      "format": "date-time"
    },
    "inputs": {
      "type": "object",
      "description": "Inputs to the AI system for this trace",
      "properties": {
        "query": {
          "type": ["string", "null"],
          "description": "User query or prompt"
        },
        "context": {
          "type": ["string", "null"],
          "description": "Retrieved context provided to the model"
        }
      },
      "additionalProperties": true
    },
    "outputs": {
      "type": "object",
      "description": "Outputs from the AI system",
      "properties": {
        "response": {
          "type": ["string", "null"],
          "description": "Final answer/response from the model"
        }
      },
      "additionalProperties": true
    },
    "context_hash": {
      "type": "string",
      "description": "SHA256 hash (truncated) of canonicalized inputs",
      "pattern": "^[a-f0-9]{16}$"
    },
    "output_hash": {
      "type": "string",
      "description": "SHA256 hash (truncated) of canonicalized outputs",
      "pattern": "^[a-f0-9]{16}$"
    },
    "final_answer_provenance": {
      "type": "object",
      "description": "Tracks where the final answer was selected from in multi-step traces",
      "required": ["source"],
      "properties": {
        "source": {
          "type": "string",
          "description": "Where the final answer came from",
          "enum": ["trace.output", "span.output", "none"]
        },
        "span_id": {
          "type": ["string", "null"],
          "description": "ID of the span if source is span.output"
        },
        "span_name": {
          "type": ["string", "null"],
          "description": "Name of the span if source is span.output"
        },
        "field": {
          "type": ["string", "null"],
          "description": "Field name where answer was found"
        }
      }
    },
    "checks": {
      "type": "array",
      "description": "Results of consistency checks driven by constitution invariants",
      "items": {
        "$ref": "#/$defs/CheckResult"
      }
    },
    "checks_passed": {
      "type": "integer",
      "description": "Number of checks that passed",
      "minimum": 0
    },
    "checks_failed": {
      "type": "integer",
      "description": "Number of checks that failed",
      "minimum": 0
    },
    "coherence_status": {
      "type": "string",
      "description": "Overall status derived from check results",
      "enum": ["PASS", "WARN", "FAIL", "PARTIAL"]
    },
    "evaluation_coverage": {
      "type": ["object", "null"],
      "description": "Coverage metrics for invariant evaluation",
      "properties": {
        "total_invariants": {
          "type": "integer",
          "description": "Total number of invariants in the constitution",
          "minimum": 0
        },
        "evaluated": {
          "type": "integer",
          "description": "Number of invariants with built-in checks",
          "minimum": 0
        },
        "not_checked": {
          "type": "integer",
          "description": "Number of invariants without evaluators (NOT_CHECKED)",
          "minimum": 0
        },
        "coverage_basis_points": {
          "type": "integer",
          "description": "Proportion of invariants evaluated, in basis points (0-10000, where 10000 = 100%)",
          "minimum": 0,
          "maximum": 10000
        }
      },
      "additionalProperties": false
    },
    "constitution_ref": {
      "type": ["object", "null"],
      "description": "Provenance of the constitution/policy document that defined check boundaries",
      "required": ["document_id", "policy_hash"],
      "properties": {
        "document_id": {
          "type": "string",
          "description": "Identifier for the constitution document (e.g., 'agent-name/0.1.0')",
          "minLength": 1
        },
        "policy_hash": {
          "type": "string",
          "description": "SHA-256 hash of the constitution policy content (16 or 64 hex chars)",
          "pattern": "^[a-f0-9]{16}([a-f0-9]{48})?$"
        },
        "version": {
          "type": ["string", "null"],
          "description": "Version of the constitution document"
        },
        "source": {
          "type": ["string", "null"],
          "description": "Where the constitution was loaded from (e.g., 'policy-repo', 'compliance-api')"
        },
        "approved_by": {
          "oneOf": [
            {
              "type": "array",
              "items": {"type": "string"},
              "minItems": 1
            },
            {
              "type": "string",
              "minLength": 1
            },
            {
              "type": "null"
            }
          ],
          "description": "Email(s) of constitution approver(s)"
        },
        "approval_date": {
          "type": ["string", "null"],
          "description": "ISO 8601 date when the constitution was approved"
        },
        "approval_method": {
          "type": ["string", "null"],
          "description": "How approval was obtained (e.g., 'github-pr-review', 'manual-sign-off')"
        },
        "signature": {
          "type": ["string", "null"],
          "description": "Base64-encoded Ed25519 signature of the constitution"
        },
        "key_id": {
          "type": ["string", "null"],
          "description": "Full SHA-256 fingerprint of the signing public key (64 hex chars)",
          "pattern": "^[a-f0-9]{64}$"
        },
        "signed_by": {
          "type": ["string", "null"],
          "description": "Identity of the constitution signer"
        },
        "signed_at": {
          "type": ["string", "null"],
          "description": "ISO 8601 timestamp when the constitution was signed"
        },
        "scheme": {
          "type": ["string", "null"],
          "description": "Signature scheme identifier",
          "enum": ["constitution_sig_v1", null]
        }
      },
      "additionalProperties": false
    },
    "halt_event": {
      "type": ["object", "null"],
      "description": "Records when execution was halted due to check failures",
      "required": ["halted", "reason", "failed_checks", "timestamp", "enforcement_mode"],
      "properties": {
        "halted": {
          "type": "boolean",
          "description": "Whether execution was halted"
        },
        "reason": {
          "type": "string",
          "description": "Human-readable reason for the halt"
        },
        "failed_checks": {
          "type": "array",
          "description": "Check IDs that triggered the halt",
          "items": {
            "type": "string"
          }
        },
        "timestamp": {
          "type": "string",
          "description": "ISO 8601 timestamp when the halt occurred",
          "format": "date-time"
        },
        "enforcement_mode": {
          "type": "string",
          "description": "The enforcement mode that was active",
          "enum": ["halt", "warn", "log"]
        }
      },
      "additionalProperties": false
    },
    "receipt_signature": {
      "type": ["object", "null"],
      "description": "Ed25519 cryptographic signature of the receipt",
      "properties": {
        "signature": {
          "type": "string",
          "description": "Base64-encoded Ed25519 signature"
        },
        "key_id": {
          "type": "string",
          "description": "Full SHA-256 fingerprint of the signing public key (64 hex chars)",
          "pattern": "^[a-f0-9]{64}$"
        },
        "signed_by": {
          "type": "string",
          "description": "Identity of the signer"
        },
        "signed_at": {
          "type": "string",
          "description": "ISO 8601 timestamp when the receipt was signed"
        },
        "scheme": {
          "type": "string",
          "description": "Signature scheme identifier",
          "enum": ["receipt_sig_v1"]
        }
      },
      "additionalProperties": false
    },
    "enforcement_decision": {
      "type": ["string", "null"],
      "description": "Top-level enforcement decision",
      "enum": ["PASSED", "WARNED", "HALTED", "LOGGED", null]
    },
    "authority_decisions": {
      "type": ["array", "null"],
      "description": "Authority boundary enforcement decisions for actions evaluated during this trace",
      "items": {
        "$ref": "#/$defs/AuthorityDecisionRecord"
      }
    },
    "escalation_events": {
      "type": ["array", "null"],
      "description": "Escalation events triggered by authority boundary enforcement",
      "items": {
        "$ref": "#/$defs/EscalationEventRecord"
      }
    },
    "source_trust_evaluations": {
      "type": ["array", "null"],
      "description": "Trust tier evaluations for data sources used in this trace",
      "items": {
        "$ref": "#/$defs/SourceTrustRecord"
      }
    },
    "extensions": {
      "type": "object",
      "description": "Optional vendor-specific metadata. Ignored by verifier but preserved in receipt.",
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "$defs": {
    "CheckResult": {
      "type": "object",
      "description": "Result of a single coherence check",
      "required": ["check_id", "name", "passed", "severity"],
      "properties": {
        "check_id": {
          "type": "string",
          "description": "Check identifier (sanna.* for standard, INV_CUSTOM_* for custom, C1-C5 legacy)",
          "pattern": "^(C[1-5]|INV_.+|sanna\\..+)$"
        },
        "name": {
          "type": "string",
          "description": "Human-readable check name",
          "minLength": 1
        },
        "passed": {
          "type": "boolean",
          "description": "Whether the check passed"
        },
        "severity": {
          "type": "string",
          "description": "Severity level if check fails",
          "enum": ["info", "warning", "critical"]
        },
        "evidence": {
          "type": ["string", "null"],
          "description": "Evidence for failure (snippets from context/output)"
        },
        "details": {
          "type": ["string", "null"],
          "description": "Additional details about check result"
        },
        "triggered_by": {
          "type": ["string", "null"],
          "description": "Invariant ID that triggered this check (e.g., 'INV_NO_FABRICATION')"
        },
        "enforcement_level": {
          "type": ["string", "null"],
          "description": "Enforcement level from constitution invariant",
          "enum": ["halt", "warn", "log", null]
        },
        "constitution_version": {
          "type": ["string", "null"],
          "description": "Constitution schema version when this check was configured"
        },
        "status": {
          "type": ["string", "null"],
          "description": "For custom invariants: NOT_CHECKED",
          "enum": ["NOT_CHECKED", null]
        },
        "reason": {
          "type": ["string", "null"],
          "description": "For custom invariants: explanation of why not evaluated"
        },
        "check_impl": {
          "type": ["string", "null"],
          "description": "Namespaced check implementation ID (e.g., 'sanna.context_contradiction')"
        },
        "replayable": {
          "type": ["boolean", "null"],
          "description": "Whether this check is deterministically replayable (true for built-in, false for custom/external)"
        }
      },
      "additionalProperties": false
    },
    "AuthorityDecisionRecord": {
      "type": "object",
      "description": "Record of an authority boundary enforcement decision",
      "required": ["action", "decision", "reason", "boundary_type", "timestamp"],
      "properties": {
        "action": {
          "type": "string",
          "description": "Name of the action that was evaluated"
        },
        "params": {
          "type": "object",
          "description": "Parameters of the action",
          "additionalProperties": true
        },
        "decision": {
          "type": "string",
          "description": "Enforcement outcome",
          "enum": ["halt", "allow", "escalate"]
        },
        "reason": {
          "type": "string",
          "description": "Human-readable explanation of the decision"
        },
        "boundary_type": {
          "type": "string",
          "description": "Which boundary tier matched",
          "enum": ["cannot_execute", "must_escalate", "can_execute", "uncategorized"]
        },
        "escalation_target": {
          "type": ["object", "null"],
          "description": "Resolved escalation target (only for escalate decisions)",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["log", "webhook", "callback"]
            }
          },
          "additionalProperties": false
        },
        "timestamp": {
          "type": "string",
          "description": "ISO 8601 timestamp when the decision was made",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "EscalationEventRecord": {
      "type": "object",
      "description": "Record of an escalation event execution",
      "required": ["action", "condition", "target_type", "success", "timestamp"],
      "properties": {
        "action": {
          "type": "string",
          "description": "Name of the action that triggered escalation"
        },
        "condition": {
          "type": "string",
          "description": "Escalation condition that matched"
        },
        "target_type": {
          "type": "string",
          "description": "Type of escalation target",
          "enum": ["log", "webhook", "callback"]
        },
        "success": {
          "type": "boolean",
          "description": "Whether the escalation completed successfully"
        },
        "details": {
          "type": ["object", "null"],
          "description": "Structured details from the escalation execution",
          "additionalProperties": true
        },
        "timestamp": {
          "type": "string",
          "description": "ISO 8601 timestamp when the escalation was executed",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "SourceTrustRecord": {
      "type": "object",
      "description": "Trust tier evaluation for a data source",
      "required": ["source_name", "trust_tier", "evaluated_at"],
      "properties": {
        "source_name": {
          "type": "string",
          "description": "Identifier for the data source"
        },
        "trust_tier": {
          "type": "string",
          "description": "Trust classification from constitution trusted_sources",
          "enum": ["tier_1", "tier_2", "tier_3", "untrusted", "unclassified"]
        },
        "evaluated_at": {
          "type": "string",
          "description": "ISO 8601 timestamp of the evaluation",
          "format": "date-time"
        },
        "verification_flag": {
          "type": ["boolean", "null"],
          "description": "Whether this source requires verification (true for tier_2)"
        },
        "context_used": {
          "type": ["boolean", "null"],
          "description": "Whether this source's context was used in C1 evaluation"
        }
      },
      "additionalProperties": false
    }
  }
}
